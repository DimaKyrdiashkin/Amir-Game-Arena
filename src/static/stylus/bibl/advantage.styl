.advantage{
    display flex
    flex-direction column
    align-items center
    background-color #FFFFFF
    background-image url('../img/Travel2.jpg')
    background-repeat no-repeat
    background-position center top  
    position relative
}
.advantage_svg{
    position absolute
    z-index -1
    top -119px
    left 10%
}
.advantage .dots{
    background #ffffffa6
}
.advantage .dots::before{
    background #fff
}
.advantage .dots::after{
    background #fff
    opacity .3
}
.top_conteiner{
    width 100%
    display flex
    flex-direction column
    align-items center
    width 100vw
}
.advantage .conteiner_head{
    max-width 1174px
    color #fff
    margin-top 3em
}
.advantage_top{
    display flex
    justify-content space-between
    margin 70px 0
    width 100%
    max-width 1200px
}
.advantage_item>h2{
    position relative
    z-index 1
    width 91px
    color #fff
}
.advantage_item>h2::before{
    content ''
    display block
    position absolute
    width 104px
    height 104px
    border-radius 50%
    background: rgba(255, 255, 255, 0.2);
    z-index -1
    border 1px dashed #DCDCDC
    left -50%
    bottom 50%
    transform translate(50%, 50%)
}
.advantage_item>p{
    color #fff
    position relative
    z-index 2
    margin-top 44px
}
.slash{
    width 1px
    height 86px
    display block
    background #DCDCDC
    transform: rotate(30deg);
}
//bottom
.bottom_conteiner{
    position relative
    width 100vw
}
.bottom_conteiner>img{
    margin-top -400px
    width 100%
    opacity 0
}
.phone_wrapp{
    max-width 1200px
    margin 0 auto
    display flex
    justify-content flex-end
}
.phone{
    position relative
    max-width 380px
    background #fff
    border-radius 36px
    padding 37px 16px 100px
    box-shadow 0px 15px 40px rgba(0, 0, 0, 0.1)
    margin-bottom 50px
}
.phone::after{
    content ''
    display block
    position absolute
    width 110px
    height 4px
    border-radius 4px
    background #645E9D
    left 50%
    bottom 20px
    transform translateX(-50%)
}
.phone_top{
    display flex
    flex-wrap wrap
    justify-content space-between
    padding 0 18px
    position relative
    margin-bottom 30px
}
.phone_top .hr{
    width 40px
    height 4px
    background #645E9D
    border-radius 4px
    position absolute
    left 50%
    bottom 7px
    transform translateX(-50%)
}
.phone_bar{
    display flex
    justify-content space-between
    width 100%
    margin-bottom 31px
}
.phone_bar > img{
    height 40px
    width 40px
}
.phone_content__items{
    display flex
    flex-wrap wrap
    justify-content space-between
    padding 20px
    box-shadow 0px 0px 12px rgba(0, 0, 0, 0.05)
    border-radius 18px
}
.phone_content__items:first-child{
    margin-bottom 22px
}
.phone_content__items>p{
    margin-top 10px
}
span.blue{
    font-size 0.666666em
}
