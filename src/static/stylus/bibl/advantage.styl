@media all and (max-width 1280px) {
    .top_conteiner,
    .bottom_conteiner{
        padding 0 47px
    }
    .phone{
        max-width 400px
    }
    .advantage_svg{
        left -5%
    }
    .phone_bar>img{
        object-fit: cover;
        height intrinsic
    }
    .advantage_top{
        margin-bottom 82px
    }
}
@media all and (max-width 920px) {
    .advantage_item>h2::before{
        left -55%
    }
    .phone{
        max-width 360px
        padding 23px 12px 70px
    }
    .advantage_svg{
        top -84px
    }
    .advantage_svg > svg{
        width 1000px
    }
    .advantage_svg{
        left -25%
    }
}
@media all and (max-width 580px) {
    .advantage_top{
        flex-direction column
        padding-left 15%
        margin-bottom 20px
    }
    .advantage_svg{
        top -225px
    }
    .slash{
        display none
    }
    .advantage_item{
        display flex
        margin-bottom 80px
    }
    .advantage_item>p{
        margin-top 20px
        margin-left 38px
    }
    .advantage_item>h2::before{
        left -100%
    }
    .phone_wrapp{
        justify-content center
        margin-top 275px
        margin-bottom 50px
    }
    .phone{
        border-radius 28px
    }
    .bottom_conteiner,
    .top_conteiner{
        padding 0 20px
    }
    .advantage_svg {
        left 50%
        transform translateX(-50%)
}
}
@media all and (max-width 350px) {
    .phone_wrapp{
        margin-top 250px
    }
}
@media all and (max-width 850px) and (orientation landscape) {
    .advantage_item>h2::before{
        left -100% !important
    }
    .slash{
        margin-right 10%
    }
    .advantage_svg{
        left -25%
    }
}