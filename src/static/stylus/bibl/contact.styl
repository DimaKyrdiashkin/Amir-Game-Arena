.contact
  margin-top 120px
.contact_head
  background #17161ae6
  width 100%
  padding 16px
.contact_title
  text-align center
.contact_contant
  background #17161ae6
  margin-top 4px
  padding 16px
  display flex
  justify-content space-between
  align-items center
.contact_text
  width 40%
.contact_text-title
  position relative
  width fit-content
  margin-bottom 32px
.contact_text-title:before
  content ''
  display block
  width 50%
  height 4px
  background #d6d6d6
  position absolute
  bottom -4px
  transform skew(-20deg)
.contact_form
  display flex
  flex-direction column
  width 50%
  margin-top 48px
.contact_form-input
  position relative
  margin-bottom 36px
  background #373737cc
.contact_form-input:last-child
  margin-top 16px
.contact_form-input input
.contact_form-input textarea
  background transparent
  border none
  width 100%
  color #d6d6d6
  font-size 1.4em
  cursor pointer
.contact_form-input input
  height 56px
  position relative
  padding 0px 16px
  transition .4s
  border-bottom 2px solid transparent
.contact_form-input input:before
  content ''
  display block
  width 100%
  height 2px
  position absolute
  left -16px
  bottom 0
  background #fff
.contact_form-input textarea
  margin 16px
  width calc(100% - 32px)
.contact_form-input label
  position absolute
  left 16px
  top 20px
  cursor pointer
  transition .4s
.contact_form-input .input_holder
  top 50%
  transform translateY(-50%)
#message
  resize none
.contact_form-input input:focus
.contact_form-input textarea:focus
  outline none
.contact_form-input input:focus
  border-bottom 2px solid #2f7f13
  transition .4s
.contact_form-input input:focus + .input_holder
  font-size .75em
  top -12px
  transition .4s
.contact_form-input textarea:focus + .textarea_holder
  font-size .75em
  top -16px
  transition .4s
.contact_form-input.active input
  border-bottom 2px solid #2f7f13
.contact_form-input.active .input_holder
  font-size .75em
  top -12px
  transition .4s
.contact_form-input.active .textarea_holder
  font-size .75em
  top -16px
  transition .4s